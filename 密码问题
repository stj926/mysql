#vim /etc/mysql/my.conf.d/mysqls.cnf
#socket下添加：
skip-grant-tables

#重启
service  mysqld  restart

登入
mysql -u root

#修改密码
update mysql.user  set password=password('root') where user='root'；

刷新
flush privileges;

#删除
skip-grant-tables

#重启
service  mysqld  restart


